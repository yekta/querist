{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2020",
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@app/*": ["./src/app/*"],
      "@css/*": ["./src/css/*"],
      "@ts/*": ["./src/ts/*"],
      "@handlers/*": ["src/ts/db/ipcHandlers/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "node_modules/monaco-editor/monaco.d.ts"]
}
